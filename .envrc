# code-search-mcp auto-configuration
# This file is loaded by direnv when entering the project directory

# Load parent .envrc if it exists (inherit configs)
source_up_if_exists

# Project identification
export CODE_SEARCH_PROJECT_NAME="promptping-foundation"

# Add to auto-index list (if not already present)
# Note: $PWD is set by direnv to the directory containing this .envrc
if [[ ! ":${CODE_SEARCH_PROJECTS}:" =~ ":${PWD}:" ]]; then
  export CODE_SEARCH_PROJECTS="${CODE_SEARCH_PROJECTS:+$CODE_SEARCH_PROJECTS:}${PWD}"
fi

# Note: The MCP server running in Claude Desktop will pick up these
# environment variables and auto-index the project on startup.
